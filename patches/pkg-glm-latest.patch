diff --git a/build.lua b/build.lua
new file mode 100644
index 0000000..49accfb
--- /dev/null
+++ b/build.lua
@@ -0,0 +1,35 @@
+local pkg       = premake.extensions.pkg
+local scriptDir = common:scriptDir()
+
+if common.host == "windows" then
+	local vsInfo = pkg:getVSInfo()
+	pkg:setupCMake(vsInfo.buildTool, scriptDir, string.format("%s/build/", scriptDir), "-D BUILD_STATIC_LIBS=1 -D GLM_TEST_ENABLE=0")
+	vsInfo:build(string.format("%s/build/", scriptDir), {
+		Debug = {
+			path        = string.format("%s/build/glm/Debug/", scriptDir),
+			config      = "Debug",
+			isStaticRT  = false,
+			outputFiles = {
+				"glm_static.lib",
+				"glm_static.pdb"
+			}
+		},
+		RelWithDebInfo = {
+			path        = string.format("%s/build/glm/RelWithDebInfo/", scriptDir),
+			config      = "Release",
+			isStaticRT  = false,
+			outputFiles = {
+				"glm_static.lib",
+				"glm_static.pdb"
+			}
+		},
+		Release = {
+			path        = string.format("%s/build/glm/Release/", scriptDir),
+			config      = "Dist",
+			isStaticRT  = false,
+			outputFiles = { "glm_static.lib" }
+		}
+	})
+else
+	error("Sorry, glm-latest only supports windows atm, hehe :> (Couldn't be arsed to do make yet xD)")
+end
\ No newline at end of file
diff --git a/dep.lua b/dep.lua
new file mode 100644
index 0000000..7cc6bb6
--- /dev/null
+++ b/dep.lua
@@ -0,0 +1,3 @@
+libdirs({ common:scriptDir() .. string.format("/Bin/%s-%s-", common.host, common.arch) .. "%{cfg.buildcfg}" })
+links({ "glm_static" })
+externalinmcludedirs({ common:scriptDir() })
\ No newline at end of file
